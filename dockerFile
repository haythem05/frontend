# Builder stage
FROM node:19.5.0-alpine AS Builder
WORKDIR /usr/src/app
COPY . .
RUN npm install -g @angular/cli
RUN npm install
# Build to EXACT path used in angular.json
RUN ng build --output-path=dist/frontend-browser --configuration production

# Final stage
FROM node:19.5.0-alpine
WORKDIR /usr/src/app
# Copy from EXACT build path
COPY --from=Builder /usr/src/app/dist/frontend-browser ./dist/frontend-browser
COPY server.js .
COPY package*.json .
RUN npm install express prom-client --production
EXPOSE 80
CMD ["node", "server.js"]