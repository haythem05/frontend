FROM node:19.5.0-alpine AS Builder 
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm install -g @angular/cli
RUN npm install 
COPY . .
RUN ng build

# Use Node.js for runtime instead of Nginx
FROM node:19.5.0-alpine
WORKDIR /usr/src/app
COPY --from=Builder /usr/src/app/dist/frontend ./dist/frontend
COPY server.js .
COPY package*.json .
RUN npm install express prom-client

EXPOSE 80
CMD ["node", "server.js"]