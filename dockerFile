FROM node:19.5.0-alpine AS Builder 
WORKDIR  /usr/src/app
COPY package*.json  ./
RUN npm install -g @angular/cli
RUN npm install 
COPY . . 
RUN ng build 



FROM nginx:alpine
COPY --from=builder /usr/src/app/dist/user-poker/browser /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]



